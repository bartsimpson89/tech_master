<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/devmanage_btn_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="550dp"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:text="设 备  管 理" />
	  <LinearLayout
		         android:id="@+id/devmanage_ll_1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/devmanage_btn_title"
		        android:layout_marginTop="50dp"
		        android:layout_marginLeft="400dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical"
		        android:padding="10dp" >
		    <Button
		        android:id="@+id/devmanage_btn_add"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       android:background="@drawable/button"
		        android:textSize="25sp"
		        android:layout_marginTop="30dp"
		        android:text="添 加 设 备 " />
		    <Button
	        android:id="@+id/devmanage_btn_modify_dev"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       android:background="@drawable/button"
	       android:layout_marginTop="30dp"
	        android:textSize="25sp"
	        android:text="修 改 设 备" />
		

		    <Button
	        android:id="@+id/devmanage_btn_modify_no"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       android:background="@drawable/button"
	       android:layout_marginTop="30dp"
	        android:textSize="25sp"
	        android:text="修 改 编 号" />
		    

		    

		</LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/devmanage_btn_title"
	        android:layout_marginLeft="700dp"
	        android:layout_marginTop="50dp"
	        android:gravity="center_horizontal"
	        android:orientation="vertical"
	        android:padding="10dp" >

	        <Button
	            android:id="@+id/devmanage_btn_modify_passwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button"
	            android:text="修 改 密 码 "
	            android:layout_marginTop="30dp"
	            android:textSize="25sp" />

	        <Button
	            android:id="@+id/devmanage_btn_del_dev"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button"
	            android:text="删 除 设 备"
	            android:layout_marginTop="30dp"
	            android:textSize="25sp" />

	        <Button
	            android:id="@+id/devmanage_btn_save"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button"
	            android:text="保 存 信 息"
	            android:layout_marginTop="30dp"
	            android:textSize="25sp" />
	    </LinearLayout>

</RelativeLayout>