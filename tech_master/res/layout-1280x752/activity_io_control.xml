<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/io_control_rl"
    tools:context="${relativePackage}.${activityClass}" >

        <LinearLayout
            android:id="@+id/io_control_ll_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/io_control_arrow_left"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/arrow_left" />

            <LinearLayout
                android:id="@+id/io_control_ll_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/io_control_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_pink"
                    android:text="主机控制"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/io_control_arrow_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/arrow_bottom" />
            </LinearLayout>

            <ImageView
                android:id="@+id/io_control_arrow_right"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:background="@drawable/arrow_right" />
        </LinearLayout>

     <LinearLayout
        android:id="@+id/io_control_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/io_control_ll_title_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">
		        <Button
		           android:id="@+id/io_control_btn_all_on"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:textSize="25sp"
		           
		           android:background="@drawable/button_bg_green"
		           android:text="电源全开" />
		         <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/arrow_bottom_2" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="300dp"
                android:orientation="vertical">
			        <Button
			           android:id="@+id/io_control_btn_all_off"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:textSize="25sp"
			           
			           android:background="@drawable/button_bg_red"
			           android:text="电源全关" />
			        <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/arrow_bottom_2" />
		        
              </LinearLayout>
               <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                 android:layout_marginLeft="300dp"
                android:orientation="vertical">
			        <Button
			           android:id="@+id/io_control_btn_all_timer"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:textSize="25sp"
			          
			           android:background="@drawable/button"
			           android:text="全部定时" />
			         <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/arrow_bottom_2" />
		        
              </LinearLayout>
        </LinearLayout>   
     
     
        <com.example.device.Device
        android:id="@+id/my_device_1"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
         <com.example.device.Device
        android:id="@+id/my_device_2"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
          <com.example.device.Device
        android:id="@+id/my_device_3"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
           <com.example.device.Device
        android:id="@+id/my_device_4"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
            <com.example.device.Device
        android:id="@+id/my_device_5"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
             <com.example.device.Device
        android:id="@+id/my_device_6"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
              <com.example.device.Device
        android:id="@+id/my_device_7"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
               <com.example.device.Device
        android:id="@+id/my_device_8"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
                <com.example.device.Device
        android:id="@+id/my_device_9"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
                 <com.example.device.Device
        android:id="@+id/my_device_10"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"
        />
       <ImageView
           android:id="@+id/ImageView1"
           android:layout_width="1200dp"
           android:layout_height="500dp"
           android:layout_below="@+id/io_control_ll_1"
           android:layout_marginBottom="40dp"
           android:layout_centerHorizontal="true"
           android:background="@drawable/frame_bg" />


</RelativeLayout>