<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="10dp" 
    android:background="#009999">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <LinearLayout
	        android:id="@+id/reg_ll_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
        <TextView
            android:id="@+id/reg_title"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:textSize="28px"
            android:text="注册新用户"
            android:textStyle="bold"  />
	   </LinearLayout>
	
	        <LinearLayout
	        android:id="@+id/reg_ll_2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal"
	        android:padding="10dp" >
	
	        <TextView
	            android:id="@+id/login_tv_usrname"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="账号"
	            android:textSize="28px"
	            android:textStyle="bold" />
	         
	        <EditText
	            android:id="@+id/login_et_usrname"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/shape_white_frame"
	            android:ems="9"
	            android:hint="请输入新账号"
	            android:padding="1dp"
	            android:textSize="25sp" />
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/log_ll_3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal"
	        android:padding="10dp" >
	
	        <TextView
	            android:id="@+id/login_tv_passwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="密码"
	            android:textSize="28px"
	            android:textStyle="bold" />
	
	        <EditText
	            android:id="@+id/login_et_passwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/shape_white_frame"
	            android:ems="9"
	            android:hint="请输入新密码"
	            android:padding="1dp"
	            android:textSize="25sp" />
	    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="10dp" 
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_positiveButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:background="@drawable/button_bg_yes_no_pink"
                android:gravity="center"/>

            <Button
                android:id="@+id/login_negativeButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:background="@drawable/button_bg_yes_no_pink"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>